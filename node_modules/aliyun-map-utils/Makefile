install:
	@npm install

doc:
	@jsduck control/ core/ data_layer/  editor/ layer/ map/ --output docs \
		--guides util/guides.json
	@python util/makedoc.py
	@ln -s  ../util/css docs/css

doc-sever:
	@cd docs && python -m SimpleHTTPServer

publish:
	@esminify -x /out,/demo,/docs -o ./out .
	@cp ./package.json ./out/
	@cp ./README.md ./out/

.PHONY: install publish doc doc-serv